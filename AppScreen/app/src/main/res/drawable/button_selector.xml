    <item android:state_pressed="true"
        android:state_enabled="true">

        <shape>
            <solid android:color="@color/primaryColor"></solid>
            <solid android:color="?android:colorAccent"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/primaryColor"></solid>
        </shape>
    </item>
</ripple>